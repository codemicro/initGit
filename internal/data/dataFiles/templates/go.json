{
    "name": "Golang (with Go modules)",
    "key": "go",

    "vars": [
        {
            "key": "projectName",
            "description": "Project name"
        },
        {
            "key": "moduleName",
            "description": "Name to be used with go mod init"
        }
    ],

    "directories": [
        "cmd/{projectName}",
        "internal",
        "run"
    ],

    "files": {
        "cmd/{projectName}/main.go": "package main\n"
    },
    
    "commands": [
        {
            "command": "go mod init {moduleName}"
        }
    ]
}