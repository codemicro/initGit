{
    "name": "Golang (with Go modules)",
    "key": "go",

    "vars": {
        "projectName": "Project name",
        "moduleName": "Name to be used with go mod init"
    },

    "directories": [
        "cmd/{projectName}",
        "internal",
        "run"
    ],

    "files": {
        "cmd/{projectName}/main.go": "package main\n"
    },
    
    "commands": [
        {
            "command": "go mod init {moduleName}"
        }
    ]
}